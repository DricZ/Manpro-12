<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".detail_event">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/detail_event_image"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/mountain_dummy_square"
            app:layout_constraintEnd_toEndOf="@id/csLayout"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@id/csLayout"
            app:layout_constraintTop_toTopOf="@id/csLayout" />

        <TextView
            android:id="@+id/detail_event_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Gereja-Gereja di Seluruh Dunia Mulai Melakukan Retret ke Pergunungan Trawas"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/csLayout"
            app:layout_constraintStart_toStartOf="@id/csLayout"
            app:layout_constraintTop_toBottomOf="@id/detail_event_image" />

        <ImageView
            android:id="@+id/detail_event_image_calendar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="280dp"
            android:src="@drawable/calendar_icon_black"
            app:layout_constraintEnd_toEndOf="@id/csLayout"
            app:layout_constraintHorizontal_bias="0.394"
            app:layout_constraintStart_toStartOf="@id/csLayout"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title" />

        <TextView
            android:id="@+id/detail_event_tanggal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="40dp"
            android:text="Tanggal"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/detail_event_image_calendar"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title" />

        <TextView
            android:id="@+id/detail_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/detail_event_image_calendar"
            app:layout_constraintTop_toBottomOf="@id/detail_event_tanggal_text"
            android:text="23 Maret 2023" />

        <ImageView
            android:id="@+id/detail_event_image_clock"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="110dp"
            android:src="@drawable/clock_icon_black"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintEnd_toEndOf="@id/csLayout"/>

        <TextView
            android:id="@+id/detail_event_durasi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_title"
            app:layout_constraintStart_toEndOf="@id/detail_event_image_clock"
            android:text="Durasi" />

        <TextView
            android:id="@+id/detail_event_durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/detail_event_durasi_text"
            app:layout_constraintStart_toEndOf="@id/detail_event_image_clock"
            android:text="13.30 - 15.45" />

        <TextView
            android:id="@+id/detail_event_deskripsi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/detail_event_image_calendar"
            app:layout_constraintStart_toStartOf="@id/csLayout"
            app:layout_constraintEnd_toEndOf="@id/csLayout"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent vehicula, risus ut viverra malesuada, turpis magna tincidunt leo, vestibulum vehicula ante nulla eu odio. " />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>