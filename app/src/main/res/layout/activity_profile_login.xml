<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".profile_login">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="100dp">



            <ImageView
                android:id="@+id/pplogin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="36dp"
                android:background="@mipmap/profilepic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pplogin" />

            <androidx.cardview.widget.CardView
                android:id="@+id/isi_profile"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25sp"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_profile"
                tools:visibility="visible">

                <TableLayout
                    android:id="@+id/tableLayout2"
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="#FEFEFE"
                    android:backgroundTint="#FEFEFE"
                    android:paddingTop="30dp"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textColor="@color/live_object_bg"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/profile_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="audrico"
                            android:textColor="@color/live_object_bg" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:gravity="left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/live_object_bg"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/profile_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gmail.com"
                            android:textColor="@color/live_object_bg" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:gravity="center|left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:textColor="@color/live_object_bg"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/profile_nohp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nomer"
                            android:textColor="@color/live_object_bg" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:gravity="center|left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/textView161"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alamat"
                            android:textColor="@color/live_object_bg"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp"
                        android:paddingBottom="15sp">

                        <TextView
                            android:id="@+id/profile_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alamat"
                            android:textColor="@color/live_object_bg" />

                        <ScrollView
                            android:id="@+id/tes123"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />
                        </ScrollView>
                    </TableRow>

                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/detail_profile"
                android:layout_width="336dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_name">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Profile" />

                <ImageView
                    android:id="@+id/dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="4dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icon_dropdown" />

                <ImageView
                    android:id="@+id/dropup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="4dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/icon_dropup" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/isi_event"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30sp"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_event">

                <TableLayout
                    android:id="@+id/tableLayout3"
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:background="#FEFEFE"
                    android:backgroundTint="#FEFEFE"
                    android:paddingTop="30dp"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">







                        <ScrollView
                            android:id="@+id/profile_sv_event"
                            android:layout_width="336dp"
                            android:layout_height="200dp"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="1dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/profile_rv_event"
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/profile_page_event_rv_layout"
                                />

                        </ScrollView>



                    </TableRow>



                </TableLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/detail_event"
                android:layout_width="336dp"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:foregroundGravity="center"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/isi_profile">

                <TextView
                    android:id="@+id/textView1411"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Event" />

                <ImageView
                    android:id="@+id/dropdown11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="4dp"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/icon_dropdown" />

                <ImageView
                    android:id="@+id/dropup11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginEnd="4dp"
                    android:visibility="visible"
                    app:srcCompat="@drawable/icon_dropup" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button_logut"
                android:layout_width="108dp"
                android:layout_height="51dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/btn_primary"
                android:text="Log out"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/isi_event" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

