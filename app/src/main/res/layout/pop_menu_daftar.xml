<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="40dp"

    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pop_menu_daftar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Apakah anda yakin ingin \nmendaftar ke acara ini?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pop_menu_daftar_Yes"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pop_menu_daftar_title"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="134dp" />
    <Button
        android:id="@+id/pop_menu_daftar_No"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pop_menu_daftar_Yes"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"

        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="134dp" />

</androidx.constraintlayout.widget.ConstraintLayout>