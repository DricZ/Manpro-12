<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/imageview_aboutus"
            android:layout_width="355dp"
            android:layout_height="234dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gkagloria" />

        <TextView
            android:id="@+id/textView129488"
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="24dp"
            android:text="GKA GLORIA NIRWANA EKSKUTIF"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_aboutus"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pdt_bambang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_aboutus" />

        <TextView
            android:id="@+id/textView511111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Pdt. Bambang Tedjokusumo"
            android:textColor="#3318D1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageview_aboutus" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="201dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="Gembala GKA Gloria Nirwana Eksekutif"
            android:textColor="#8F0982"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView511111" />

        <TextView
            android:id="@+id/textView711111"
            android:layout_width="295dp"
            android:layout_height="172dp"
            android:layout_marginTop="32dp"
            android:text="Gedung Nirwana Eksekutif diresmikan pemakaiannya tanggal 29 Februari 2004 dan Gloria Nirwana didewasakan pada tanggal 22 Desember 2018. Di dalamnya terdiri dari ruang kebaktian utama yang dapat menampung 250 orang, kemudian ada 3 kelas sekolah Minggu + perpustakaan, kantor, ruang sound system, dan sebuah pastori yang dilengkapi dengan dapur untuk ditempati oleh mahasiswa praktik."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView611111"
            android:layout_width="295dp"
            android:layout_height="152dp"
            android:background="@drawable/tabelgka"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView711111" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
